# Environment Configuration for Docker Deployment
# Copy this file to .env and update with your actual values

# Database Configuration
MONGO_URI=mongodb://localhost:27017/college-appointment-system
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/college-appointment-system

# JWT Configuration  
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_secure
JWT_LIFETIME=30d

# Server Configuration
NODE_ENV=production
PORT=4000

# Security (Optional - for production)
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration (Optional)
# CORS_ORIGIN=http://localhost:5173